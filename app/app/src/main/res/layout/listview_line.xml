<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edittextround"
    >

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/line1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/nbLine"
        android:layout_margin="10dp"

        />
<TextView
    android:layout_width="wrap_content"
    android:singleLine="false"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toRightOf="@id/nbLine"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toLeftOf="@id/favoriteBTN"
    android:text="from: Số 34 Nguyễn Lương Bằng"
    android:textColor="@color/black"
    android:gravity="center"
    android:id="@+id/departLineTxt"
    android:layout_margin="10dp"
    android:textSize="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/nbLine"
        app:layout_constraintRight_toLeftOf="@id/favoriteBTN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/departLineTxt"
        android:text="to: Số 34 Nguyễn Lương Bằng"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:gravity="center"
        android:id="@+id/arriveeLineTxt"
        android:textSize="20dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/favorite_off"
        android:id="@+id/favoriteBTN"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>